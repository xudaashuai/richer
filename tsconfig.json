{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "ES5",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "useDefineForClassFields": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"]
}
